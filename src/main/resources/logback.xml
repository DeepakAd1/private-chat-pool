<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="APP_LOG"
              value="${user.home}/logs/chat-pool/chat-pool.log"/>

    <appender name="FILE-ROLLING"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${APP_LOG}</file>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <fileNamePattern>
                ${user.home}/logs/chat-pool/archived/chat-pool.%d{yyyy-MM-dd}.%i.gz
            </fileNamePattern>

            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>1GB</totalSizeCap>
            <maxHistory>10</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.chat.privatepool" level="DEBUG" additivity="false">
        <appender-ref ref="FILE-ROLLING"/>
    </logger>

    <root level="ERROR">
        <appender-ref ref="FILE-ROLLING"/>
    </root>

</configuration>